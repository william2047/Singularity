{
  "compilerOptions": {
    /* Language target */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",

    /* Resolution */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Type safety */
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    /* Quality-of-life */
    "forceConsistentCasingInFileNames": true
  }
}